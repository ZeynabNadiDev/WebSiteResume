@model List<Resume.Domain.Entity.Reservation.ReservationDate>
@using Resume.Application.Convertors
@using Resume.Domain.ViewModels.Reservation

@{
    ViewData["Title"] = "لیست زورهای نوبت گیری";
}


<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="d-flex align-items-center">
        <div class="mr-auto">
            <h3 class="page-title">@ViewData["Title"]</h3>
        </div>
        <div class="right-title">
            <button type="button" onclick="LoadReservationFormModal(0)" class="btn btn-circle btn-success mb-5"><i class="mdi mdi-plus"></i></button>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">

    <div class="row">
        <div class="col-12">
            <div class="box">
                <div class="box-body" id="data-table-box">
                    <div class="table-responsive">
                        <table class="table table-hover no-wrap data-table">
                            <thead>
                                <tr class="bg-secondary">
                                    <th>تاریخ </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>

                                @if (Model != null && Model.Any())
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr id="ListItem-@(item.Id)">
                                            <td>@item.Date.ToShamsi()</td>
                                            <td>
                                                <button onclick="LoadReservationFormModal(@item.Id)" class="btn btn-icon-circle btn-success">
                                                    <i class="ti-plus"></i>
                                                </button>
                                                <button onclick="LoadReservationFormModal(@item.Id)" class="btn btn-icon-circle btn-warning">
                                                    <i class="ti-marker-alt"></i>
                                                </button>
                                                <button onclick="DeleteReservation(@item.Id)" class="btn btn-icon-circle btn-danger">
                                                    <i class="ti-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
<!-- /.content -->